<ul>
  <% @figures.each do |figure| %>
  <li>
    <a herf="/figures/<%=figure.id%>">
      <%= figure.name %></a>
    <ul>
      <% figure.titles.each do |title| %>
      <li><%=title.name%></li>
      <%end%>
    </ul>
    <ul>
      <% figure.landmarks.each do |landmark| %>
      <li><%=landmark.name%></li>
      <%end%>
    </ul>
  </li>
  <%end%>
</ul>
